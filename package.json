{
  "name": "event-station",
  "version": "2.0.0",
  "author": "Morris Allison III <author@morris.xyz> (http://morris.xyz)",
  "description": "A versatile and robust event emitter class.",
  "license": "MIT",
  "homepage": "https://github.com/morrisallison/event-station",
  "bugs": "https://github.com/morrisallison/event-station/issues",
  "repository": "github:morrisallison/event-station",
  "keywords": [
    "async",
    "asynchronous",
    "class",
    "dispatcher",
    "emitter",
    "es6",
    "event",
    "eventemitter",
    "events",
    "fluent",
    "mixin",
    "promise",
    "promisified",
    "regexp",
    "rx",
    "standalone",
    "typescript"
  ],
  "dependencies": {},
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.8",
    "backbone": "^1.6.1",
    "benchmark": "^2.1.4",
    "bun-types": "1.2.18",
    "eventemitter2": "^6.4.9",
    "eventemitter3": "^5.0.1",
    "typescript": "^5.8.3",
    "underscore": "^1.13.7"
  },
  "devDependenciesComments": {
    "@microsoft/api-extractor": "Used for rolling up the TypeScript definitions",
    "backbone": "Used for benchmarking against Backbone's Events module",
    "benchmark": "Used for running benchmarks",
    "bun-types": "Provides TypeScript definitions for Bun.js",
    "eventemitter2": "Used for benchmarking against EventEmitter2",
    "eventemitter3": "Used for benchmarking against EventEmitter3",
    "typescript": "Used for building the TypeScript source files",
    "underscore": "Used for benchmarking against Underscore's Event module"
  },
  "scripts": {
    "benchmark": "bun test benchmarks/event-callback.test.ts",
    "build": "tsc --build --pretty --verbose .",
    "build:force": "tsc --build --pretty --force --verbose .",
    "bundle": "bun run bundle:js && bun run bundle:js-min && bun run bundle:dts",
    "bundle:js": "bun build --format=esm --target=browser --packages=external --outfile=dist/event-station.js --banner=\"$(bun ./scripts/banner.js)\" ./lib/main.js",
    "bundle:js-min": "bun build --format=esm --target=browser --packages=external --outfile=event-station.min.js --banner=\"$(bun ./scripts/banner.js)\" ./dist/event-station.js --sourcemap=linked --minify",
    "bundle:dts": "api-extractor run --config ./scripts/api-extractor.json",
    "dev": "bun run build:force && bun run watch",
    "watch": "tsc --build --watch --pretty --verbose .",
    "watch:force": "tsc --build --watch --pretty --force --verbose .",
    "check": "tsc --build --watch --pretty --force --verbose --noEmit ./tsconfig.test.json",
    "clean": "rm -rf ./dest ./lib ./*.tsbuildinfo",
    "test": "bun test tests --coverage",
    "test:watch": "bun test tests --watch",
    "prepublishOnly": "bun run clean && bun run test && bun run build && bun run bundle"
  },
  "type": "module",
  "main": "./dist/event-station.js",
  "jsnext:main": "./dist/event-station.js",
  "typings": "./dist/event-station.d.ts",
  "jspm": {
    "format": "esm",
    "jspmNodeConversion": false,
    "main": "./dist/event-station.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "docs",
    "LICENSE",
    "README.md"
  ]
}
